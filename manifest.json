{
  "manifest_version": 2,
  "name": "Apendo IBM BPM",
  "version": "1.0.0",
  "description": "Change UI for IBM BPM Process Center to increase readibility and productivity. ",
  "author": "Håkan Öström",
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "js": [
        "script.js"
      ],
      "matches": [
        "https://*/ProcessCenter/*",
        "https://*/ProcessCenter/*",
        "https://*/WebPD/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}